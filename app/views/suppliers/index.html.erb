<h1> SUPPLIERS INDEX </h1>
  <h2> Click Supplier to edit details </h2>
  <div class="row">
    <% @suppliers.each do |supplier| %>
      <div class="col-md-4">
        <div class="thumbnail">              
          <h4><a href="/suppliers/<%= supplier.id %>"><%= supplier.name %> </a> </h4>
          <h4> Phone: <%= supplier.phone %> </h4>
          <h4> Email: <%= supplier.email %> </h4>
        </div>
      </div>
    <% end %> 
  </div>