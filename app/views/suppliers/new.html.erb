<body>
  <h1> SUPPLIER ADDITION </h1>
  <div class="supplier_new">
    <%= form_tag '/suppliers', method: :post do %>
      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>
      <div>
        <%= label_tag :phone %>
        <%= text_field_tag :phone %>
      </div>
      <div>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
        <%= submit_tag "YES!" %>
      </div>
    <% end %>
  </div>
</body>