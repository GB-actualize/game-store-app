<body>
  <h1> SUPPLIER ADDITION </h1>
  <%= form_tag '/suppliers', method: :post do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div>
      <%= label_tag :phone %>
      <%= text_field_tag :phone %>
    </div>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= submit_tag "YES!" %>
    </div>
  <% end %>
</body>