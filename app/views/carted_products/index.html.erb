<h1>  Checkout page </h1>
  <div class="row">
    <% @carted_products.each do |carted_product| %>
      <div class="col-md-4">
        <div class="thumbnail">            
          <h4> Game ID: <%= carted_product.game.title %> </h4>
          <h4> Quantity: <%= carted_product.quantity %> 
          </h4>
        </div>
      </div>
    <% end %>

      <%= form_tag '/orders', method: :post do %>

        <div>
            <%= submit_tag "Buy Now!" %>
        </div>
      <% end %>

  </div>